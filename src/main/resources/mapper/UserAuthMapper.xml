<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.baek.tbs_miniERP_BACK.mapper.UserAuthMapper">
    <insert id="grantAuth">
        INSERT INTO user_auth (user_id, auth_code)
        VALUES (#{userId}, #{authCode})
    </insert>

    <delete id="withdrawAuth">
        DELETE FROM user_auth
        WHERE user_id = #{userId}
        AND auth_code = #{authCode}
    </delete>
</mapper>